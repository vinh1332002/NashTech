@model PersonCreateModel

@{
  ViewData["Title"] = "Create new person";
}

<div class="">
  <h1 class="display-4 text-center">Create new person</h1>
  <div class="row">
    <form asp-controller="Rookies" asp-action="Create" method="post" class="col-4 offset-4">
      <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" type="text" class="form-control" id="exampleInputEmail1"
          placeholder="Your first name">
        <span asp-validation-for="FirstName" class="form-text text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" type="text" class="form-control" id="exampleInputEmail1" placeholder="Your last name">
        <span asp-validation-for="LastName" class="form-text text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Gender"></label>
        <select class="form-control" asp-for="Gender" aria-label=".form-select-sm example">
          <option value="Male" selected>Male</option>
          <option value="Female">Female</option>
          <option value="Other">Other</option>
        </select>
      </div>
      <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" type="date" class="form-control" id="exampleInputEmail1"
          placeholder="Your date of birth">
        <span asp-validation-for="DateOfBirth" class="form-text text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" type="text" class="form-control" id="exampleInputEmail1"
          placeholder="Your phone number">
        <span asp-validation-for="PhoneNumber" class="form-text text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="BirthPlace"></label>
        <input asp-for="BirthPlace" type="text" class="form-control" id="exampleInputEmail1"
          placeholder="Your birth place">
        <span asp-validation-for="BirthPlace" class="form-text text-danger"></span>
      </div>
      <button class="btn btn-success btn-sm" type="submit">Submit</button>
    </form>
  </div>
</div>
