@model PersonDetailModel

@{
    ViewData["Title"] = "Person Information";
    var value = ViewData["Index"]?.ToString() ?? "";
    var index = !string.IsNullOrEmpty(value) ? int.Parse(value) : 0;
}

<div class="">
    <h1 class="display-4 text-center">Person Information</h1>
    <div class="row">
        <form asp-controller="Rookies" asp-action="Details" asp-route-index="@index" method="post"
            class="col-4 offset-4">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <label asp-for="FirstName" type="text" class="form-control">@Model.FirstName</label>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <label asp-for="LastName" type="text" class="form-control">@Model.LastName</label>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <label asp-for="PhoneNumber" type="text" class="form-control">@Model.PhoneNumber</label>
            </div>
            <div class="form-group">
                <label asp-for="BirthPlace"></label>
                <label asp-for="BirthPlace" type="text" class="form-control">@Model.BirthPlace</label>
            </div>
            <div class="form-group mt-4">
                <a class="btn btn-success btn-sm" role="button" asp-controller="Rookies" asp-action="Index">Back To
                    Title</a>
                <a role="button" class="btn btn-danger btn-sm" href="#" data-bs-toggle="modal"
                    data-bs-target="#exampleModal">Delete</a>
            </div>
        </form>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Rookies" asp-action="DeleteAndRedirected" asp-route-index="@index" method="post"
                class="col-8 offset-2">
                <div class="modal-header">
                    <h1 class="modal-title fs-6 text-dark" id="exampleModalLabel">Delete
                        Confirmation</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" class="text-dark">
                    <h2 class="text-dark fs-6"> Are you sure you want to delete ? </h2>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Confirm</button>
                </div>
            </form>
        </div>
    </div>
</div>
